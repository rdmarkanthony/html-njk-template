    // these scripts are being used externally, but they should be included in the main script

    // once main script is ready
    projName.on("ready", () => {
        console.log("ready");
    });

    // for resize
    projName.on("resize", (status, event) => {
        console.log("resize", status);
    });
</script>
{% endblock %}
