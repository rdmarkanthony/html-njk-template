                    recusandae!
                </p>
            </div>
            <div>
                <div class="inline-block" data-animate="rubberBand,calc(var(--animate-delay) + 0.8s)">
                    <p><a class="link-underline hover:text-blue-600" href="https://animate.style/" target="_blank">https://animate.style/</a></p>
                </div>
            </div>
        </div>
    </div>
    <div class="container w-[calc(100%-2rem)] mx-auto">
        <div>
            <div data-animate="fadeInDown,2,0.8">fadeInDown</div>
        </div>
    </div>
</section>
{% endblock %}

{% block footerscript %}
<script>
    // Requirements
        // JS
            // /assets/js/utils/_inview.js
            // /assets/js/utils/_animate.js
            // /assets/js/utils/_splitText.js (optional)
            // /assets/js/lib/splittype.min.js (optional)
        // CSS
            // /assets/scss/_animate.min.scss
            // /assets/scss/_data-animate.scss

    projName.on('ready', () => {
        new _animate({
            debug: true, // keeps inline animation styles on elements (for debugging)
            delay: 0.1,
            adjacentDelay: 0.2,
            duration: 0.8,
            keyframe: 'fadeInUpSmall'
        });
    });
</script>
{% endblock %}