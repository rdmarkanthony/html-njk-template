{% block footerscript %}
<script>
    // _lightbox class can be found in assets/js/utils folder
    document.querySelectorAll('[data-lightbox]').forEach((item) => {
        const _item = item;

        const _dataset = _item.dataset.lightbox.split(',s')
        const _modal = _dataset[0] === 'modal' ? true : false;

        _item.addEventListener('click', (e) => {
            e.preventDefault();

            new _lightbox({target: null, modal: _modal});
        });
    });
</script>
{% endblock %}